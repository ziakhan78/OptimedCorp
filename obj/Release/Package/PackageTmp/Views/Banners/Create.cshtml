@model OptimedCorporation.Models.Banner

@{
    ViewBag.Title = "Create Banner";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("Create", "Banners", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Create Banner</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Menu, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                   { new SelectListItem{Text="Male", Value="M"},
                     new SelectListItem{Text="Female", Value="F"}}, "Please select")*@


            @Html.DropDownListFor(model => model.Menu, new List<SelectListItem>
        {
          
            new SelectListItem{Text ="Home", Value="Home"},
            new SelectListItem{Text ="Our Story", Value="Our Story"},
            new SelectListItem{Text ="Brand - Silhouette", Value="Brand - Silhouette"},
             new SelectListItem{Text ="Brand - Adidas", Value="Brand - Adidas"},
              new SelectListItem{Text ="Brand - Etnia Barcelona", Value="Brand - Etnia Barcelona"},
            new SelectListItem{Text ="Events & News", Value="Events & News"},
            new SelectListItem{Text ="Store Locator", Value="Store Locator"},
             new SelectListItem{Text ="Contact Us", Value="Contact Us"},

        }, "Select", new { @class = "custom_css" })


            @Html.ValidationMessageFor(model => model.Menu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BannerImage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="MenuBanner" required />
            @Html.ValidationMessageFor(model => model.BannerImage, "", new { @class = "text-danger" })
            <span class="txt_msg">(Please upload only jpeg format and image dimension is Width="1400px" height="600px")</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Status) <span class="txt_msg">(Checked for Active and only Active Status will display on front-end.)</span>
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Ipaddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ipaddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ipaddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateAdded, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateAdded, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateAdded, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

    <div>
        <div class="col-md-offset-2 col-md-10">
            <span style="color:green">@Html.Raw(ViewBag.Message)</span>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
