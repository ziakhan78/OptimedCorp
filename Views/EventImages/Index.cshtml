@model IEnumerable<OptimedCorporation.Models.EventImages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Event Details</h2>

<p>
    @Html.ActionLink("Back to Events Page", "ViewEvents", "Events")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Events.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Events.Title)
        </td>
        <td>
            <img src='~/EventsNews/EventsImages/@Html.ValueFor(modelItem => item.Images)' alt="" height="75" width="75" />
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>*@
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
        @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })
        </td>
    </tr>
}

</table>
