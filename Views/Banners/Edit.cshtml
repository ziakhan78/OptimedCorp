@model OptimedCorporation.Models.Banner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Banners", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Banner</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Ipaddress)
    @Html.HiddenFor(model => model.DateAdded)

    <div class="form-group">
        @Html.LabelFor(model => model.Menu, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Menu, new List<SelectListItem>
         {
             new SelectListItem{Text ="Home", Value="Home"},
             new SelectListItem{Text ="Our Story", Value="Our Story"},
             new SelectListItem{Text ="Brand - Silhouette", Value="Brand - Silhouette"},
             new SelectListItem{Text ="Brand Adidas", Value="Brand - Adidas"},
             new SelectListItem{Text ="Brand - Etnia Barcelona", Value="Brand - Etnia Barcelona"},
             new SelectListItem{Text ="Events & News", Value="Events & News"},
             new SelectListItem{Text ="Store Locator", Value="Store Locator"},
             new SelectListItem{Text ="Contact Us", Value="Contact Us"},

         }, "Select", new { @class = "custom_css" })


            @Html.ValidationMessageFor(model => model.Menu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BannerImage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="MenuBanner" />
            @Html.ValidationMessageFor(model => model.BannerImage, "", new { @class = "text-danger" })
            <span class="txt_msg">Please upload only jpeg format and image dimension is Width="1400px" height="600px"</span>



        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <img src='~/BannerImages/@Html.ValueFor(model => model.BannerImage)' alt="" height="50" width="75" />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>



    <div>
        <div class="col-md-offset-2 col-md-10">
            <span style="color:green">@Html.Raw(ViewBag.Message)</span>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
