@model IEnumerable<OptimedCorporation.Models.Careers>

@{
    ViewBag.Title = "Careers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Careers</h2>
            </div>
            <div class="box-content">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Dob)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Experience)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Qualification)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.SkillSet)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            Resume
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.Ipaddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateAdded)
                            </th>*@

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dob)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Experience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qualification)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SkillSet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                <a href="~/Resume/@Html.ValueFor(modelItem => item.Resume)">@Html.DisplayFor(modelItem => item.Resume)</a>
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Ipaddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateAdded)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                </td>*@
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
