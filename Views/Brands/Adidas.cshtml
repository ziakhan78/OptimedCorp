

@{
    ViewBag.Title = "Brands - Adidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<OptimedCorporation.Models.Banner>
<script src="~/js/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("div.carousel-item:first").addClass("active");
    });
</script>


<div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">

    <div class="video-section-mask"></div>

    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner" role="listbox">

        @foreach (var item in Model)
        {
        <div class="carousel-item" >
            <img class="img-fluid " src="../BannerImages/@Html.ValueFor(modelItem => item.BannerImage)" alt="" style="width:100%;" />
        </div>
        }

    </div>

</div>

<section id="rrr" class="py-5 ">
    <div class="container">

        <div class="row align-items-center">

            <div class="col-md-2">
                <img class="img-fluid" src="../images/Adidas-img.jpg" alt="" />
            </div>

            <div class="col-md-10">

                <div class="clearfix"></div>


                <h2 class="agile-title">Adidas Sport Eyewear</h2>
                <span class="w3-line"></span>
                <p class="mt-3">
                    Adidas is one of the most desirable and biggest sports brands in the world. A leader of innovation in technology and design, with the support of global icons and events to create unbelievable brand excitement. Silhouette International is the Global Licensee for adidas eyewear.
                </p>






            </div>






        </div>
    </div>
</section>




<section class=" mb-5">
    <div class="container">

        <div class="row align-items-center no-gutters">
            <div class="col-md-4">

                <img class="img-fluid" src="../images/add-1.jpg" alt="" />


            </div>

            <div class="col-md-4">
                <img class="img-fluid" src="../images/add-2.jpg" alt="" />

            </div>

            <div class="col-md-4">
                <img class="img-fluid" src="../images/add-3.jpg" alt="" />

            </div>



        </div>
    </div>
</section>




<section class="workinghour_bg mb-5 p-5">
    <div class="container">

        <div class="row align-items-center">
            <div class="col-md-6">

                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/fZeucgCBZXk" allowfullscreen></iframe>
                </div>





            </div>

            <div class="col-md-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/NZTXqIafja4" allowfullscreen></iframe>
                </div>

            </div>





        </div>
    </div>
</section>



<div class="container">

    <div class="row ">
        <div class="clearfix">
            <p class="text-left">
                No matter whether it’s a world record or personal best – sport and vision go together. All products from Adidas performance eyewear are developed together with athletes who compete at the highest levels in sport to ensure best performance and quality.


            </p>

            <p class="text-left">
                Adidas performance eyewear ensure unobstructed vision through unique design and extreme wrap-around lenses, as well as lasting comfort with a secure fit, due to exceptional materials including the exclusive SPX™ frame material.



            </p>

        </div>

        <div class="clearfix"></div><br>
        <div class="d-flex text-center mb-3" style="margin: 0 auto; width: 180px; ">
            <a class="btn btn-outline-secondary click-me" href="https://www.adidas.co.in/" target="_blank">Visit Adidas Website</a>
        </div>
    </div>

</div>


